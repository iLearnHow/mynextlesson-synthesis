# iLearnHow Flask Backend Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///ilearnhow.db

# API Keys (if needed for external services)
RUNPOD_API_KEY=your_runpod_api_key_here

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=2592000  # 30 days in seconds

# CORS Configuration
CORS_ORIGINS=http://localhost:8000,https://ilearnhow.pages.dev

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True 