{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ilearnhow.com/schemas/reports/usage.schema.json",
  "title": "Usage Report",
  "type": "object",
  "required": ["date", "dau", "lessons_completed", "avg_ttf_speech_ms"],
  "properties": {
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "dau": { "type": "integer", "minimum": 0 },
    "lessons_completed": { "type": "integer", "minimum": 0 },
    "avg_ttf_speech_ms": { "type": "number", "minimum": 0 },
    "regions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["region", "dau"],
        "properties": {
          "region": { "type": "string" },
          "dau": { "type": "integer", "minimum": 0 }
        }
      }
    }
  }
}
