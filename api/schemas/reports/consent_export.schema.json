{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ilearnhow.com/schemas/reports/consent_export.schema.json",
  "title": "Consent Records Export",
  "type": "object",
  "required": ["date", "count", "records"],
  "properties": {
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "count": { "type": "integer", "minimum": 0 },
    "records": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["user_id", "type", "issued_at"],
        "properties": {
          "user_id": { "type": "string" },
          "type": { "type": "string", "enum": ["guardian", "likeness"] },
          "token": { "type": ["string", "null"] },
          "scope": { "type": ["string", "array", "null"], "items": { "type": "string" } },
          "issued_at": { "type": "string", "format": "date-time" },
          "revoked_at": { "type": ["string", "null"], "format": "date-time" }
        }
      }
    }
  }
}
